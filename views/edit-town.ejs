<!DOCTYPE html>
<html lang="es">
<head>
    <%- include("templates/header") %>
</head>
<body>
    <div class="container">
        <div class="card mt-4">
            <div class="card-header bg-warning text-dark">
                <h1>Editar Municipio</h1>
            </div>
            <div class="card-body">
                <form action="/test/towns/edit/<%= town.code %>" method="POST">
                    <div class="mb-3">
                        <label for="code" class="form-label">CÃ³digo Municipio</label>
                        <input type="text" class="form-control" name="code" id="code" 
                               value="<%= town.code %>" readonly>
                    </div>
                    
                    <div class="mb-3">
                        <label for="name" class="form-label">Nombre Municipio</label>
                        <input type="text" class="form-control" name="name" id="name" 
                               value="<%= town.name %>" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="department" class="form-label">Departamento</label>
                        <select name="department" id="department" class="form-select" required>
                            <% departments.forEach(dep => { %>
                                <option value="<%= dep.code %>" <%= town.department === dep.code ? "selected" : "" %>>
                                    <%= dep.name %>
                                </option>
                            <% }) %>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-success">Actualizar Municipio</button>
                    <a href="/test" class="btn btn-secondary">Cancelar</a>
                    <a href="/test" class="btn btn-warning">Volver</a>

                </form>
            </div>
        </div>
    </div>
    <footer>
        <%- include("templates/footer") %>
    </footer>
</body>
</html>
